<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/mydialogshape"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/progress_line_bar_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="正在下载"
            android:textColor="#000"
            android:textSize="25sp" />

        <View
            android:id="@+id/progress_line_bar_tv_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/progress_line_bar_tv_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#000" />

        <com.develop.xdk.df.nfcmachine.entity.ProgressBar.MyProgressBar
            android:id="@+id/progress_line_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/progress_line_bar_tv_line"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/progress_line_bar_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_line_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="dddd"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Button
            android:id="@+id/progress_line_bar_bt_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button"
            android:layout_below="@id/progress_line_bar_tv_position"
            android:text="隐藏"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>
